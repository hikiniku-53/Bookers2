<div class="container">

  <div class="row">

    <%= render 'sidebar', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table table-hover table-inverse">

        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag  @user.get_image(100,100) %>
                <br>
                <%= @user.name %>
              <% end %>
            </td>

            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>

            <td>
              <%= @book.body %>
            </td>

            <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
              </td>

              <td>
                <%= link_to "Destroy", destroy_book_path, method: :delete,
                "data-confirm" => "本当に削しますか？", class: 'btn btn-sm btn-danger' %>
              </td>
            <% end %>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>